<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00796B</item>
        <item name="colorPrimaryDark">#009688</item>
        <item name="colorAccent">#B2DFDB</item>
    </style>

    <!-- Style for a header TextView -->
    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <!-- Style for a header2 TextView -->
    <style name="Header2TextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Style for a Score Number -->
    <style name="ScoreNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Style for a Question number -->
    <style name="QuestionNumberStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for a Question  -->
    <style name="QuestionStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for a Answer  -->
    <style name="AnswerStyle">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for a Button  -->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>

</resources>