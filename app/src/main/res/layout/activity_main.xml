<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anrdoid.quizapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderTextStyle"
            android:text="Math Quiz" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/Header2TextStyle"
                android:text="Name" />

            <TextView
                style="@style/Header2TextStyle"
                android:text="Score" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:hint="Your Name"
                android:inputType="textCapWords" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="0"
                    android:textColor="#00796B"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/4"
                    android:textColor="#757575"
                    android:textSize="25dp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Q1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/QuestionNumberStyle"
                android:text="Q1:" />

            <TextView
                style="@style/QuestionStyle"
                android:text="5 * 5 =" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answer_Q1_25"
                    style="@style/AnswerStyle"
                    android:text="25" />

                <RadioButton
                    android:id="@+id/answer_Q1_20"
                    style="@style/AnswerStyle"
                    android:text="20" />

                <RadioButton
                    android:id="@+id/answer_Q1_10"
                    style="@style/AnswerStyle"
                    android:text="10" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Q2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/QuestionNumberStyle"
                android:text="Q2:" />

            <TextView
                style="@style/QuestionStyle"
                android:text="10 * 6 =" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/answer_Q2"
                style="@style/AnswerStyle"
                android:hint="Answer Question 2"
                android:inputType="number" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Q3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/QuestionNumberStyle"
                android:text="Q3:" />

            <TextView
                style="@style/QuestionStyle"
                android:text="= 50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/answer_Q3_1"
                style="@style/AnswerStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5 * 10" />

            <CheckBox
                android:id="@+id/answer_Q3_2"
                style="@style/AnswerStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5 + 10" />

            <CheckBox
                android:id="@+id/answer_Q3_3"
                style="@style/AnswerStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100 / 5" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray" />

        <!-- Q4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/QuestionNumberStyle"
                android:text="Q4:" />

            <TextView
                style="@style/QuestionStyle"
                android:text="6 * 6 =" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/answer_Q4"
                style="@style/AnswerStyle"
                android:hint="Answer Question 4"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_answer_button"
                style="@style/ButtonStyle"
                android:onClick="submitAnswer"
                android:text="Show the Score" />

            <Button
                android:id="@+id/reset_button"
                style="@style/ButtonStyle"
                android:onClick="ResetScore"
                android:text="Reset" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
